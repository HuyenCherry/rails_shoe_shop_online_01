<% provide :title, t("search") %>
<div class="left_content">
  <div class="title"><span class="title_icon">
    <%= image_tag "bullet1.gif" %></span>
    <%= t "result" %>
  </div>
  <% @shoes.each do |shoe| %>
    <div class="feat_prod_box">
      <div class="prod_img">
        <%= link_to image_tag(shoe.img_url, class: "thumb",
        border: "0"), shoe %>
      </div>
      <div class="prod_det_box">
        <div class="box_top"></div>
        <div class="box_center">
          <div class="prod_title">
            <%= link_to shoe.name, shoe %>
          </div>
          <p class="details">
            <%= link_to shoe.description, shoe %>
          </p>
          <%= link_to t("more"), shoe, class: "more" %>
          <div class="clear"></div>
        </div>
        <div class="box_bottom"></div>
      </div>
      <div class="clear"></div>
    </div>
  <% end %>
  <%= paginate(@shoes) if @shoes.any?  %>
</div>

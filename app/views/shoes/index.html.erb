<% provide :title, t(".shoes") %>
<div class="left_content">
  <div class="crumb_nav">
    <%= link_to t("home"), root_path %> &gt;&gt; category name
  </div>
  <div class="title">
    <span class="title_icon"><%= image_tag "bullet1.gif", alt: "" %></span>
    <%= t "category" %>
  </div>
  <div class="new_products">
    <% @shoes.each do |shoe| %>
    <div class="new_prod_box">
      <%= link_to shoe.name, shoe, class: "element_a" %>
      <div class="new_prod_bg">
        <%= link_to image_tag(shoe.img_url, alt: "", class: "thumb",
          border: "0"), shoe %>
      </div>
    </div>
    <% end %>
    <%= paginate @shoes %>
  </div>
  <div class="clear"></div>
</div>

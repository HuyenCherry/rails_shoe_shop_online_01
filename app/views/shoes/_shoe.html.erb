<div class="new_prod_box">
  <%= link_to shoe.name, shoe, class: "element_a" %>
  <div class="new_prod_bg">
    <%= link_to image_tag(shoe.img_url, alt: "", class: "thumb",
      border: "0"), shoe %>
    <% if shoe.discount.present? %>
      <strong class="new"><%= shoe.discount.percent  %>%</strong>
    <% end %>
  </div>
</div>

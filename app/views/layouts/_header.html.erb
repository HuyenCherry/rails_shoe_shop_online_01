<div class="header">
  <div class="logo">
  <%= link_to image_tag("logo.gif", alt: "", border: "0"), "#" %>
  </div>
  <div id="menu">
    <ul class="nav navbar-nav navbar-right">
      <li class="selected"><%= link_to t("home"), root_path %></li>
      <li><%= link_to t("about"), about_path %></li>
      <li><%= link_to t("page_product"), shoes_path %></li>
      <% if logged_in? %>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= t "account" %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li><%= link_to t("setting"), 
              edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("page_logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("page_login"), login_path %></li>
      <% end %>
      <li><%= link_to t("page_contact"), contact_path %></li>
    </ul>
  </div>
</div>

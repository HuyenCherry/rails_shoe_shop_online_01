<% provide :title, t(".cart") %>
<div class="left_content">
  <div class="title"><span class="title_icon">
    <%= image_tag "bullet1.gif", alt: "" %></span>
    <%= t "my_cart" %>
  </div>
  <div class="feat_prod_box_details">
  <%= form_for :item, url: orders_path do |f| %>
    <table class="cart_table">
      <tr class="cart_title">
        <td><%= t "item" %></td>
        <td><%= t "name_shoe" %></td>
        <td><%= t "price" %></td>
        <td><%= t "quantity" %></td>
        <td><%= t "total" %></td>
        <td><%= t "select" %></td>
      </tr>
      <% @items.each do |item| %>
        <% shoe = Cart.new.get_shoe item %>
        <tr id="cart-item-<%= item.id %>">
          <td>
            <div class="new_prod_bg">
              <%= link_to image_tag(shoe.img_url, alt: "", class: "thumb",
              border: "0"), shoe %>
              <span class="new_icon">
                <%=
                if shoe.discount
                  shoe.discount.percent
                end %>
              </span>
            </div>
          </td>
          <td>
            <div class="new_prod_box">
              <div class="prod_title">
                <%= link_to shoe.name, shoe %>
              </div>
              <div class="col-xs-4">
                <%= link_to t("delete"), item, method: :delete,
                  data: { confirm: t("question_before_del_user") },
                  remote: :true, class: "destroy-product" %>
              </div>
            </div>
          </td>
          <td>
            <%= shoe.price %>
          </td>
          <td>
            <div class="col-xs-4">
              <div class="new_icon">
                <%= number_field_tag :quantity, item.quantity, 
                  class: "update-product", id: "update-product-#{item.id}",
                  data: {id: item.id}, min: 1, max: shoe.quantity + item.quantity %>
              </div>
            </div>
          </td>
          <td id="total_price_item">
            <%= number_to_currency item.total_price %>
          </td>
          <td>
            <%= check_box_tag "event_ids[]", item.id %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4" class="cart_total">
        <span class="red">
          <%= t "total" %>
        </span></td>
        <td id="total_price_cart">
          <%= number_to_currency current_user.cart.total_price %>
        </td>
      </tr>
    </table>
    <div class="checkout">
      <%= f.submit t("checkout"), class: "checkout" %>
    </div>
    <% end %>
    <%= link_to t("continue"), root_path, class:"continue" %>
  </div>
  <div class="clear"></div>
</div>

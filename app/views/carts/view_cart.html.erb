<% provide :title, t(".cart") %>
<div class="left_content">
  <div class="title"><span class="title_icon"><%= image_tag "bullet1.gif", alt: "" %></span>My cart</div>
  <div class="feat_prod_box_details">
    <table class="cart_table">
      <tr class="cart_title">
        <td><%= t "item" %></td>
        <td><%= t "name_shoe" %></td>
        <td><%= t "price" %></td>
        <td><%= t "quantity" %></td>
        <td><%= t "total" %></td>
      </tr>
      <% total = 0
        price_shoes = 0
      %>
      <% @items.each do |item| %>
        <% shoe = Shoe.find_by id: item.shoe_id %>
        <tr>
          <td style="visibility:hidden">
            <%=
              if shoe.discount
                price_shoes = shoe.price * item.quantity - shoe.discount.percent * 0.01  * shoe.price
              else
                price_shoes = shoe.price * item.quantity
              end
              total = total + price_shoes
            %>
          </td>
        </tr>
        <tr>
          <td>
            <div class="new_prod_bg">
              <%= link_to image_tag(shoe.img_url, alt: "", class: "thumb",
              border: "0"), shoe %>
              <span class="new_icon">
                <%= 
                if shoe.discount
                  shoe.discount.percent
                end %>
              </span>
            </div>
          </td>
          <td>
            <div class="new_prod_box">
              <div class="prod_title">
                <%= link_to shoe.name, shoe %>
              </div>
              <div class="col-xs-4">
                <%= link_to t("delete"), shoe, method: :delete,
                  data: { confirm: "Are you sure?" },
                  remote: :true, class: "destroy-product" %>
              </div>
            </div>
          </td>
          <td>
            <%= shoe.price %>
          </td>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <%= price_shoes %>$
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4" class="cart_total">
        <span class="red">
          <%= t "shipping" %>
        </span></td>
        <td> 25$ </td>
      </tr>
      <tr>
        <td colspan="4" class="cart_total">
        <span class="red">
          <%= t "total" %>
        </span></td>
        <td>
          <%= total + 25 %>$
        </td>
      </tr>
    </table>
    <%= link_to t("continue"), root_path, class:"continue" %>
    <%= link_to t("checkout"), root_path, class:"checkout"%>
    </div>
  <div class="clear"></div>
</div>

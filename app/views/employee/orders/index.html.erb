<% provide :title, t("order_management") %>
<h1><%= t("order_management") %></h1>
<table class="table table-stripped">
  <thead>
    <th><%= t "id" %></th>
    <th><%= t "address" %></th>
    <th><%= t "status_order" %></th>
    <th><%= t "payment_type" %></th>
    <th><%= t "total" %></th>
    <th><%= t "created_at" %></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.address %></td>
      <td><%= order.get_status %></td>
      <td><%= order.get_payment_type %></td>
      <td><%= order.total_price %></td>
      <td><%= l(order.created_at, format: :default) %></td>
      <td><%= link_to t("process"),  edit_employee_order_path(order),
        class: "btn btn-sm btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
  <%= paginate @orders, theme: "twitter-bootstrap-3" %>
</table>

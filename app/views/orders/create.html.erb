<% provide :title, t(".cart") %>
<div class="left_content">
  <div class="title"><span class="title_icon">
    <%= image_tag "bullet1.gif", alt: "" %></span>
    <%= t "infor" %>
  </div>

  <table class="cart_table">
    <div class="feat_prod_box_details">
      <%= render "order" %>
    </div>
  </table>

  <div class="feat_prod_box_details">
  </div>

  <div class="title"><span class="title_icon">
    <%= image_tag "bullet1.gif", alt: "" %></span>
    <%= t "infor_product" %>
  </div>

  <div class="feat_prod_box_details">
    <table class="cart_table">
      <tr class="cart_title">
        <td><%= t "item" %></td>
        <td><%= t "name_shoe" %></td>
        <td><%= t "price" %></td>
        <td><%= t "quantity" %></td>
        <td><%= t "total" %></td>
      </tr>
      <% @items.each do |item| %>
        <% shoe = Shoe.find_by id: item.shoe_id %>
        <tr>
          <td>
            <div class="new_prod_bg">
              <%= link_to image_tag(shoe.img_url, alt: "", class: "thumb",
              border: "0"), shoe %>
              <span class="new_icon">
                <%= 
                if shoe.discount
                  shoe.discount.percent
                end %>
              </span>
            </div>
          </td>
          <td>
            <div class="new_prod_box">
              <div class="prod_title">
                <%= link_to shoe.name, shoe %>
              </div>
              <div class="col-xs-4">
                <%= link_to t("delete"), item, method: :delete,
                  data: { confirm: t("question_before_del_user") },
                  remote: :true, class: "destroy-product" %>
              </div>
            </div>
          </td>
          <td>
            <%= shoe.price %>
          </td>
          <td>
            <div class="col-xs-4">
              <%= item.quantity %>
            </div>
          </td>
          <td>
            <%= number_to_currency item.total_price item %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4" class="cart_total">
        <span class="red">
          <%= t "total" %>
        </span></td>
        <td>
          <%= number_to_currency Cart.new.total_price @items %>
        </td>
      </tr>
    </table>
    <%= link_to t("continue"), root_path, class:"continue" %>
    </div>
  <div class="clear"></div>
</div>

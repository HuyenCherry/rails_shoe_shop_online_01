<% provide :title, t(".cart") %>
<div class="left_content">
  <div class="title"><span class="title_icon">
    <%= image_tag "bullet1.gif", alt: "" %></span>
    <%= t "infor" %>
  </div>
  <%= form_for @user, url: orders_path, method: :post do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form_row">
      <%= f.label :name, t("name"), class: "contact" %>
      <%= f.text_field :name, class: "contact_input" %>
    </div>
    <div class="form_row">
      <%= f.label :email, class: "contact" %>
      <%= f.email_field :email, class: "contact_input" %>
    </div>
    <div class="form_row">
      <%= f.label :phone, t("phone"), class: "contact" %>
      <%= f.text_field :phone, class: "contact_input" %>
    </div>
    <div class="form_row">
      <%= f.label :address, t("address"), class: "contact" %>
      <%= f.text_field :address, class: "contact_input" %>
    </div>
    <div class="form_row">
      <%= f.label :payment_type, t("payment_type"), class: "contact" %>
      <%= f.label :payment_type, t("in_person"), class: "radio-inline"%>
      <%= f.radio_button :payment_type, t("in_person"), class: "smalled", checked: true %>
      <%= f.label :payment_type, t("card"), class: "radio-inline"%>
      <%= f.radio_button :payment_type, t("card"), class: "smalled", checked: false %>
    </div>
    <div class="feat_prod_box_details">
    </div>
    <div class="title"><span class="title_icon">
      <%= image_tag "bullet1.gif", alt: "" %></span>
      <%= t "infor_product" %>
    </div>
    <div class="feat_prod_box_details">
      <table class="cart_table">
        <tr class="cart_title">
          <td><%= t "item" %></td>
          <td><%= t "name_shoe" %></td>
          <td><%= t "price" %></td>
          <td><%= t "quantity" %></td>
          <td><%= t "total" %></td>
        </tr>
        <% @items.each do |item| %>
          <% shoe = Cart.new.get_shoe item %>
          <tr>
            <td>
              <%= hidden_field_tag "cart_item_ids[]", item.id %>
              <div class="new_prod_bg">
                <%= link_to image_tag(shoe.img_url, alt: "", class: "thumb",
                border: "0"), shoe %>
                <span class="new_icon">
                  <%=
                  if shoe.discount
                    shoe.discount.percent
                  end %>
                </span>
              </div>
            </td>
            <td>
              <%= link_to shoe.name, shoe %>
            </td>
            <td>
              <%= shoe.price %>
            </td>
            <td>
              <%= item.quantity %>
            </td>
            <td>
              <%= number_to_currency item.total_price %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td colspan="4" class="cart_total">
            <span class="red">
              <%= t "total" %>
            </span>
          </td>
          <td class="cart_total">
            <%= number_to_currency current_user.cart.total_price %>
          </td>
        </tr>
        <tr>
          <td colspan="7">
              <%= f.submit t("order"), class: "checkout btn btn-primary" %>
          </td>
        </tr>
      </table>
      <%= link_to t("continue"), root_path, class:"continue" %>
      </div>
    <div class="clear"></div>
  <% end %>
</div>

<% provide :title, t("user_management") %>

<ul class="nav nav-tabs" id="my_tabs">
  <li class="active"><%= link_to t("user"), "#user", data: {toggle: "tab"} %></li>
  <li><%= link_to t("admin"), "#admin", data: {toggle: "tab"} %></li>
</ul>

<div class="tab-content">
  <div id="user" class="tab-pane fade in active">
    <table class="table table-stripped">
      <thead>
        <th><%= t "id" %></th>
        <th><%= t "img_url" %></th>
        <th><%= t "name" %></th>
        <th><%= t "birthday" %></th>
        <th><%= t "email" %></th>
        <th><%= t "phone" %></th>
        <th><%= t "role" %></th>
        <th><%= t "username" %></th>
        <th><%= t "address" %></th>
        <th><%= t "date_participation" %></th>
        <th></th>
      </thead>
      <tbody id="users">
        <%= render @users %>
      </tbody>
    </table>
    <div id="user-paginator">
      <%= paginate @users, theme: "twitter-bootstrap-3", param_name: "user_page" %>
    </div>
  </div>

  <div id="admin" class="tab-pane fade">
    <%= link_to t("add"), new_admin_user_path, class: "btn btn-sm btn-primary" %>
    <table class="table table-stripped">
      <thead>
        <th><%= t "id" %></th>
        <th><%= t "img_url" %></th>
        <th><%= t "name" %></th>
        <th><%= t "birthday" %></th>
        <th><%= t "email" %></th>
        <th><%= t "phone" %></th>
        <th><%= t "role" %></th>
        <th><%= t "username" %></th>
        <th><%= t "address" %></th>
        <th><%= t "date_participation" %></th>
        <th></th>
        <th></th>
      </thead>
      <tbody id="admins">
        <%= render @admins %>
      </tbody>
    </table>
    <div id="admin-paginator">
      <%= paginate @admins, theme: "twitter-bootstrap-3", param_name: "admin_page" %>
    </div>
  </div>
</div>

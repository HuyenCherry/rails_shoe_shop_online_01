<% provide :title, t("category_management") %>
<h1><%= t("category_management") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |f| %>

      <%= f.label :name, t("name") %>
      <%= f.email_field :name, class: "form-control" %>

      <%= f.label :trademark, t("trademark") %>
      <%= f.text_field :trademark, class: "form-control" %>

      <%= f.label :publisher %>
      <%= f.email_field :publisher, class: "form-control" %>

      <%= f.submit t("page_edit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

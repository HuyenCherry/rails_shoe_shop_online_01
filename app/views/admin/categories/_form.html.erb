<%= form_for @category, url: admin_category_path  do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, t("name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :trademark, t("trademark") %>
  <%= f.text_field :trademark, class: "form-control" %>

  <%= f.label :publisher %>
  <%= f.text_field :publisher, class: "form-control" %>

  <%= f.label :status, t("status") %>
  <%= f.label :status, t("active"), class: "radio-inline"%>
  <%= f.radio_button :status, :active, class: "smalled" %>
  <%= f.label :status, t("unactive"), class: "radio-inline"%>
  <%= f.radio_button :status, :unactive, class: "smalled" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
